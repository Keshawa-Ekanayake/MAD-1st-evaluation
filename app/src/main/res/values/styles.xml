<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name = "stylesforheader">
        <item name = "android:textStyle">bold</item>
        <item name = "android:textSize">30sp</item>
        <item name = "android:textColor">#171003</item>
    </style>

    <style name = "stylesforusername">
        <item name = "android:textStyle">italic</item>
        <item name = "android:textSize">15sp</item>
        <item name = "android:textColor">#171003</item>
    </style>

    <style name = "stylesforaddabook">
        <item name = "android:textColor">#171003</item>
        <item name = "android:textSize">30sp</item>
        <item name = "android:textStyle">italic</item>
    </style>

    <style name = "stylesforinsertbookinterface">
        <item name = "android:textSize">18sp</item>
        <item name = "android:textStyle">bold</item>
        <item name = "android:textColor">#171003</item>
    </style>

    <style name = "stylesforsearch">
        <item name = "android:textColor">#171003</item>
        <item name = "android:textSize">25sp</item>
        <item name = "android:textStyle">italic</item>
    </style>

    <style name = "stylesfortable">
        <item name = "android:textSize">18sp</item>
        <item name = "android:textAlignment">center</item>
        <item name = "android:textColor">#171003</item>
        <item name = "android:textStyle">bold</item>
    </style>

    <style name = "stylesforlogin">
        <item name = "android:textColor">#171003</item>
        <item name = "android:textSize">30sp</item>
        <item name = "android:textStyle">italic</item>
    </style>

    <style name = "stylesforuname_password">
        <item name = "android:textSize">18sp</item>
        <item name = "android:textStyle">bold</item>
        <item name = "android:textColor">#171003</item>
    </style>

</resources>